<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DodawanieKoduDoBazyActivity"
    android:background="#00C853" >

    <EditText
        android:id="@+id/nazwa_odpadu_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Nazwa odpadu"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Init_scan" />

    <EditText
        android:id="@+id/kolor_kosza_na_odpady_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="kolor kosza na odpady"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazwa_odpadu_edittext" />

    <Button
        android:id="@+id/dodaj_kod_button"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:layout_marginTop="56dp"
        android:background="#73C695"
        android:text="Dodaj kod do bazy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kolor_kosza_na_odpady_edittext" />

    <Button
        android:id="@+id/Init_scan"
        android:layout_width="348dp"
        android:layout_height="58dp"
        android:layout_marginTop="172dp"
        android:text="Zeskanuj kod kreskowy produktu ktory chcesz dodac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#73C695"/>

</androidx.constraintlayout.widget.ConstraintLayout>